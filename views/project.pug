extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{projectData.title}

        p.lead.text-light
          | #{projectData.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each technology in projectData.technologies
            li= technology

        a.button.expanded(href=projectData.liveLink, target='_blank') Live Demo
        a.button.expanded(href=projectData.gitHubLink, target='_blank') GitHub Repo
    
    img.image(src=projectData.images[0])
    img.image(src=projectData.images[1])
  if projectData.images[2]
    img.image(src=projectData.images[2])
